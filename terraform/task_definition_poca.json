[
    {
        "name": "poca-webserver",
        "image": "poca/poca-2020:latest",
        "memoryReservation": 950,
        "portMappings": [
            {
            "containerPort": 8080,
            "hostPort": 80,
            "protocol": "tcp"
            }
        ],
        "cpu": 1024,
        "essential": true,
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-region": "eu-west-3",
                "awslogs-group": "poca-web",
                "awslogs-stream-prefix": "ecs-poca"
            }
        },
        "privileged": false,
        "secrets": [{
            "name": "DB_PASSWORD",
            "valueFrom": "arn:aws:ssm:eu-west-3:182500928202:parameter/database/password"
        }]
    }
]
